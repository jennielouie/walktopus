<%= form_for @comment do  |f|  %>

    <%=f.label :walk_id %> <br>
    <%= f.text_field :walk_id, :placeholder =>"Enter walk id" %>
    <br>

    <%=f.label :street_name %> <br>
    <%= f.text_field :street_name, :placeholder =>"Enter street name here" %>
    <br>

    <%=f.label :username %> <br>
    <%= f.text_field :username, :placeholder =>"Enter username here" %>
    <br>

    <%=f.label :date %> <br>
    <%= f.text_field :date, :placeholder =>"Enter date" %>
    <br>

    <%=f.label :time_of_day %> <br>
    <%= f.text_field :time_of_day, :placeholder =>"Enter time of day (day or night)" %>
    <br>

    <%= f.label :street_comment %> <br>
    <%=f.text_area :street_comment, size: "80x5", :placeholder => "Enter description" %>
    <br>
    <%= f.submit  "Save Comment" %>

<% end %>

