<h1>Search Results for <%= @comments[0].street_name %></h1>
<table>
  <thead>
      <tr>
          <th>Date</th>
          <th>Time of day</th>
          <th>Comment</th>
          <th>Walker</th>
      </tr>
  </thead>

  <tbody>
  <%@comments.each do |comment| %>
    <tr>
        <td><%=comment.date%></td>
        <td><%=comment.time_of_day%></td>
        <td><%=comment.street_comment%></td>
        <td><%=comment.username%></td>
    </tr>
  <% end %>
  </tbody>
</table>